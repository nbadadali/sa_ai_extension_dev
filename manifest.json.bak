{
  "manifest_version": 3,
  "name": "Sa.AI Email Assistant",
  "version": "1.0",
  "description": "Categorize your Gmail emails with AI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "identity",           
    "storage",            
    "activeTab"           
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*",
    "https://nbadadali2.app.n8n.cloud/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "76996691363-nevr3buhf9rsqb35kn3lqvum00rkgisk.apps.googleusercontent.com", 
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly" 
    ]
  }
}
